<h1>Manage Portals</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @portals.each do |portal| %>
      <tr>
        <td><%= portal.name %></td>
        <td><%= portal.imageUrl %></td>
        <td><%= portal.latitude %></td>
        <td><%= portal.longitude %></td>
        <td><%= link_to 'Show', portal %></td>
        <td><%= link_to 'Edit', edit_portal_path(portal) %></td>
        <td><%= link_to 'Destroy', portal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Portal', new_portal_path %>
